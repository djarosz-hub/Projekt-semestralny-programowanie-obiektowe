<Page x:Class="WpfApp1.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="ClientsPage" Loaded="Page_Loaded">
    <Page.Resources>
        <CollectionViewSource x:Key="clientsViewSource" d:DesignSource="{d:DesignInstance {x:Type local:Clients}, CreateList=True}"/>
    </Page.Resources>

    <Grid DataContext="{StaticResource clientsViewSource}">
        <Grid.Background>
            <ImageBrush ImageSource="freeStockPhoto2.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Style="{StaticResource subHeaderTextStyle}" Grid.Row="0">Clients</Label>
        <DataGrid Style="{StaticResource dataGridStyle}" SelectedIndex="0" x:Name="clientsDataGrid" Grid.Column="0" Grid.Row="1" Grid.RowSpan="7" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" RowDetailsVisibilityMode="VisibleWhenSelected" SelectionChanged="IdSelection">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="client_idColumn" Binding="{Binding client_id}" Header="client id" Width="Auto"/>
                <DataGridTextColumn x:Name="client_first_nameColumn" Binding="{Binding client_first_name}" Header="client first name" Width="Auto"/>
                <DataGridTextColumn x:Name="client_nameColumn" Binding="{Binding client_name}" Header="client name" Width="Auto"/>
                <DataGridTextColumn x:Name="firm_evidence_numberColumn" Binding="{Binding firm_evidence_number}" Header="firm evidence number" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Style="{StaticResource supportingLabel}" Grid.Row="0" Grid.Column="1" Margin="20,0,0,-10" VerticalAlignment="Bottom" HorizontalAlignment="Left">Client orders:</Label>
        <DataGrid x:Name="ClientOrdersDG" Style="{StaticResource dataGridStyle}" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="client id" Width="Auto" Binding="{Binding Path=clientId}"/>
                <DataGridTextColumn Header="order id" Width="Auto" Binding="{Binding Path=orderId}"/>
                <DataGridTextColumn Header="order date" Width="100" Binding="{Binding Path=orderDate}"/>
                <DataGridTextColumn Header="employee name" Width="Auto" Binding="{Binding Path=employeeFullName}"/>
                <DataGridTextColumn Header="total price" Width="*" Binding="{Binding Path=totalPrice}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Style="{StaticResource labelStyle}" Grid.Row="4" Grid.Column="1"  VerticalAlignment="Top" HorizontalAlignment="Left" Height="90" Grid.RowSpan="2" Width="145">
            <Label.Content>
                <AccessText TextWrapping="Wrap" Text="Products in order:" Width="113"></AccessText>
            </Label.Content>
        </Label>
        <DataGrid Style="{StaticResource dataGridStyle}" Grid.Row="4" Grid.Column="1" Grid.RowSpan="2" Margin="140,15,15,45">
            <DataGrid.Columns>
                <DataGridTextColumn Header="order id" Binding="{Binding orderId}" Width="Auto"/>
                <DataGridTextColumn Header="product id" Binding="{Binding productId}" Width="Auto"/>
                <DataGridTextColumn Header="product name" Binding="{Binding productName}" Width="*"/>
                <DataGridTextColumn Header="price" Binding="{Binding price}" Width="Auto"/>
                <DataGridTextColumn Header="quantity" Binding="{Binding quantity}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Style="{StaticResource labelStyle}" Grid.Row="5" Grid.Column="1" VerticalAlignment="Bottom">Add new client:</Label>
        <TextBox x:Name="AddFirstNameTB" Style="{StaticResource pageOptionTextBox}" Text="First name" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" Margin="25,0,0,35" MaxLength="20" Width="130"/>
        <TextBox x:Name="AddLastNameTB" Style="{StaticResource pageOptionTextBox}" Text="Last name" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center" MaxLength="25" Width="130" Margin="-30,0,0,35"/>
        <TextBox x:Name="AddFENTB" Style="{StaticResource pageOptionTextBox}" Text="FEN" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Right" MaxLength="10" Margin="0,0,107,35" Width="78"/>
        <Button Style="{StaticResource pageCommandButton}" Grid.Column="1" Grid.Row="6" Content="Add" HorizontalAlignment="Right" Margin="0,0,15,35" Click="Add_Click"/>
        
        <Label Style="{StaticResource labelStyle}" Grid.Row="6" Grid.Column="1" VerticalAlignment="Bottom" Margin="20,0,0,0">Find client:</Label>
        <TextBox x:Name="FindFirstNameTB" Style="{StaticResource pageOptionTextBox}" Text="First name" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left" MaxLength="20" Width="130" Margin="25,0,0,50"/>
        <TextBox x:Name="FindLastNameTB" Style="{StaticResource pageOptionTextBox}" Text="Last name" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left" MaxLength="25" Width="130" Margin="25,0,0,-10"/>
        <Button Style="{StaticResource pageCommandButton}" Grid.Column="1" Grid.Row="7" Content="Find" Margin="-70,8,0,0" Click="Find_Click"/>
        
        <Label Style="{StaticResource labelStyle}" Grid.Row="6" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,70,0">Update FEN:</Label>
        <TextBox x:Name="UpdateFENTB" Style="{StaticResource pageOptionTextBox}" Text="FEN" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Right" MaxLength="10" Margin="0,0,107,50" Width="78"/>
        <TextBox x:Name="UpdateIdNTB" Style="{StaticResource pageOptionTextBox}" Text="ID" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Right" MaxLength="10" Margin="0,0,107,-10" Width="40"/>
        <Button Style="{StaticResource pageCommandButton}" Grid.Column="1" Grid.Row="7" Content="Update" Margin="0,8,15,0" Click="Update_Click" HorizontalAlignment="Right"/>

    </Grid>
</Page>
